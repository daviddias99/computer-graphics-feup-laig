<lxs>
    <scene root="root" axis_length="5" />

    <views default="mainCamera">
        <perspective id="mainCamera" near="0.1" far="500" angle="45">
            <from x="3" y="2" z="3" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="0.9" />
    </globals>

    <lights>
        <spot id="ceiling_light" enabled="1" angle="5" exponent="0">
            <location x="3" y="3" z="3" w="1" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0.0" quadratic="0.0" />
        </spot>
    </lights>

    <textures>
        <!-- TODO: change this in case you don't have this texture -->
        <texture id="test_tex" file="scenes/images/t_floor.jpg" />
        <texture id="special_p1_tex" file="scenes/images/t_black_marble.jpg" />
        <texture id="special_p2_tex" file="scenes/images/t_white_marble.jpg" />
        <texture id="special_square_tile_tex" file="scenes/images/t_dark_wood.jpg" />
        <texture id="special_octagon_tile_tex" file="scenes/images/t_light_wood.jpg" />
    </textures>

    <materials>
        <material id="test_material" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>

        <material id="special_p1_material" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

        <material id="special_p2_material" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>

        <material id="special_square_tile_material" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>

        <material id="special_octagonal_tile_material" shininess="3">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.3" g="0.3" b="0.3" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="null_transformation">
            <translate x="0" y="0" z="0" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="test_primitive">
            <plane npartsU="1" npartsV="1" />
        </primitive>
    </primitives>

    <components>

        <component id="special_gameboard">
        </component>

        <component id="root">
            <transformation>
                <transformationref id="null_transformation" />
            </transformation>
            <materials>
                <material id="test_material" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="special_gameboard" />
                <componentref id="special_button_play" />
                <componentref id="special_choose_opponents" />
                <componentref id="special_choose_other" />
                <componentref id="title_card" />
            </children>
        </component>

        <component id="special_button_play">

            <pickable id="special_button_play"/>

            <transformation>

                <translate x="0" y="0.5" z="0" />
                <scale x="1" y="0.3" z="1" />
                <rotate axis="y" angle="45" />
                <rotate axis="x" angle="90" />

            </transformation>
            <materials>
                <material id="test_material" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="test_primitive" />
            </children>

        </component>

        <component id="special_choose_opponents">

            <pickable id="special_choose_opponents"/>

            <transformation>

                <translate x="-0.4" y="0.5" z="1" />
                <scale x="1" y="0.3" z="1" />
                <rotate axis="y" angle="90" />
                <rotate axis="x" angle="90" />

            </transformation>
            <materials>
                <material id="test_material" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="test_primitive" />
            </children>

        </component>

        <component id="special_choose_other">

            <pickable id="special_choose_other"/>

            <transformation>

                <translate x="1" y="0.5" z="-0.4" />
                <scale x="1" y="0.3" z="1" />
                <rotate axis="x" angle="90" />

            </transformation>
            <materials>
                <material id="test_material" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="test_primitive" />
            </children>

        </component>

        <component id="title_card">

            <transformation>

                <translate x="0" y="1.2" z="0" />
                <scale x="1.4" y="0.7" z="1.4" />
                <rotate axis="y" angle="45" />
                <rotate axis="x" angle="90" />

            </transformation>
            <materials>
                <material id="test_material" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="test_primitive" />
            </children>

        </component>

    </components>
</lxs>
