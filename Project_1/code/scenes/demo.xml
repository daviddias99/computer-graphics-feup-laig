<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/rocks.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x="1" y="0" z="0"/>
        </transformation>

        <transformation id="pyramidFaceTransformation">
            <rotate axis="y" angle="90" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="3" top="2" height="4" slices="20" stacks="20" />
        </primitive>

        <primitive id="pyramidTriangle">
            <triangle x1="0" y1="0" z1="1" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0"/>
        </primitive>
    </primitives>

    <components>

        <component id="demoRoot">
            <transformation>
                <translate x="1" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="pyramidFace1" />
            </children>
        </component>

        <component id="pyramidFace1">
            <transformation>
                <translate x="0" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="pyramidTriangle" />
                <componentref id="pyramidFace2" />
            </children>

        </component>

        <component id="pyramidFace2">
            <transformation>
                <transformationref id="pyramidFaceTransformation"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="pyramidTriangle" />
                <componentref id="pyramidFace3" />
            </children>
        </component>

        <component id="pyramidFace3">
            <transformation>
                <transformationref id="pyramidFaceTransformation"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="pyramidTriangle" />
                <componentref id="pyramidFace4" />
            </children>
        </component>

        <component id="pyramidFace4">
            <transformation>
                <transformationref id="pyramidFaceTransformation"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="pyramidTriangle" />
            </children>
        </component>


    </components>
</lxs>