<lxs>
    <scene root="demoRoot" axis_length="1"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="0" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="0" y="10" z="0" w="0.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="0" />            
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/rocks.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <translate x="1" y="0" z="0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="patchy">
            <patch npointsU="3" npointsV="4" npartsU="50" npartsV="50">
                <controlpoint xx="-1.5" yy="-1.5" zz="0.0"/>
                <controlpoint xx="-2.0" yy="-2.0" zz="2.0"/>
                <controlpoint xx="-2.0" yy="2.0" zz="2.0"/>
                <controlpoint xx="-1.5" yy="1.5" zz="0.0"/>
                <controlpoint xx="0.0" yy="0.0" zz="3.0"/>
                <controlpoint xx="0.0" yy="-2.0" zz="3.0"/>
                <controlpoint xx="0.0" yy="2.0" zz="3.0"/>
                <controlpoint xx="0.0" yy="0.0" zz="3.0"/>
                <controlpoint xx="1.5" yy="-1.5" zz="0.0"/>
                <controlpoint xx="2.0" yy="-2.0" zz="2.0"/>
                <controlpoint xx="2.0" yy="2.0" zz="2.0"/>
                <controlpoint xx="1.5" yy="1.5" zz="0.0"/>

            </patch>
        </primitive>

        <primitive id="patcholi">
            <patch npointsU="3" npointsV="4" npartsU="50" npartsV="50">
                <controlpoint xx="-2.0" yy="-2.0" zz="1.0"/>
                <controlpoint xx="-2.0" yy="-1.0" zz="-2.0"/>
                <controlpoint xx="-2.0" yy="1.0" zz="5.0"/>
                <controlpoint xx="-2.0" yy="2.0" zz="-1.0"/>
                <controlpoint xx="0.0" yy="-2.0" zz="0.0"/>
                <controlpoint xx="0.0" yy="-1.0" zz="-1.0"/>
                <controlpoint xx="0.0" yy="1.0" zz="1.5"/>
                <controlpoint xx="0.0" yy="2.0" zz="0.0"/>
                <controlpoint xx="2.0" yy="-2.0" zz="-1.0"/>
                <controlpoint xx="2.0" yy="-1.0" zz="2.0"/>
                <controlpoint xx="2.0" yy="1.0" zz="-5.0"/>
                <controlpoint xx="2.0" yy="2.0" zz="1.0"/>

            </patch>
        </primitive>

        <primitive id="ghost" >
            <patch npointsU="6" npointsV="6" npartsU="50" npartsV="50">


            </patch>
        </primitive>

    </primitives>

    <animations>
    </animations>

    <components>

        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="patcholi" />
            </children>
        </component>

    </components>
</lxs>